{
  "name": "root",
  "private": true,
  "scripts": {
    "install": "npm run build:deps",
    "bootstrap": "npx lerna bootstrap",
    "dev": "npm run bootstrap && npx lerna run serve --scope izabela-next --stream",
    "build": "npm run build:app",
    "build:deps": "npm run bootstrap && npx lerna run build --scope  '{@packages/*,@apps/app-server}' --stream",
    "build:app": "npm run bootstrap && npx lerna run build --scope '{@packages/*,izabela-next}' --stream"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.0.1",
    "@parcel/transformer-typescript-types": "^2.0.1",
    "lerna": "^4.0.0",
    "microbundle": "^0.15.0",
    "typescript": "^4.5.4"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "pre/rc",
        "channel": "pre/rc",
        "prerelease": "rc"
      },
      {
        "name": "beta",
        "channel": "beta",
        "prerelease": "beta"
      },
      {
        "name": "alpha",
        "channel": "alpha",
        "prerelease": "alpha"
      }
    ],
    "plugins": [
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ]
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "semi": false,
    "trailingComma": "all",
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}
